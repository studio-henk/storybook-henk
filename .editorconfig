# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

# Set indentation size to 2 spaces for JavaScript and CSS files
[*.js]
indent_size = 2

[*.css]
indent_size = 2